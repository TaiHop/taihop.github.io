---
const { projectName, projectLink } = Astro.props
---

<div class="project container">
    <project>
        <h2 class="project-title" style="text-align: center;">
            {projectName}
        </h2>
        <div style="text-align: center;">
            <p class="project-description">
               <slot />
            </p>
             <div class="project-link-container" style="text-align: center; margin-bottom: 2px;">
                <a href={projectLink} class="project-link " style = "margin-bottom">
                    View Project
                </a>
             </div>
        </div>
    </project>
</div>
